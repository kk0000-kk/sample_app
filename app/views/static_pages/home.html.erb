<% if user_signed_in? %>
  <div class="row">
    <aside class="col-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="card text-bg-light my-2">
    <div class="card-body center">
      <h1 class="card-title">Welcome to the Sample App</h1>
      <h2 class="card-text">
        This is the home page for the
        <a href="https://railstutorial.jp/">Ruby on Rails Tutorial</a>
        sample application.
      </h2>
      <%= link_to "Sign up now!", new_user_registration_path, class: "btn btn-lg btn-primary" %>
    </div>
  </div>
  <%= link_to image_tag("rails.svg", alt: "Rails logo", width: "200"),"https://rubyonrails.org/" %>
<% end %>
